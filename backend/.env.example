# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mini-ai-tutor
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mini-ai-tutor?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=30d

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
# Recommended replacement for decommissioned Llama 3.1 models:
# Use a supported model such as `llama-3.3-70b-versatile` or another model listed
# in Groq's deprecations page: https://console.groq.com/docs/deprecations
GROQ_MODEL=llama-3.3-70b-versatile

# Alternative AI APIs (Optional)
# GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional - for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ============================================
# REDIS CACHE CONFIGURATION
# ============================================

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

# For production (Redis Cloud, AWS ElastiCache, etc):
# REDIS_HOST=your-cluster.redis.cloud.com
# REDIS_PORT=6380
# REDIS_PASSWORD=your_redis_password_here
# REDIS_TLS_ENABLED=true

# Redis Connection Settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=100
REDIS_CONNECTION_TIMEOUT_MS=5000
REDIS_COMMAND_TIMEOUT_MS=3000

# Cache Features
CACHE_ENABLED=true
CACHE_SCHEMA_VERSION=v1
CACHE_ENABLE_SWR=true
CACHE_ENABLE_STAMPEDE_PROTECTION=true

# Cache Encryption (for sensitive data)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CACHE_ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=900

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Metrics
CACHE_METRICS_ENABLED=true
CACHE_METRICS_INTERVAL_MS=60000

# Redis Cluster (for production high-availability)
# REDIS_CLUSTER_ENABLED=false
# REDIS_CLUSTER_NODES=node1:6379,node2:6379,node3:6379

# Redis Sentinel (for production failover)
# REDIS_SENTINEL_ENABLED=false
# REDIS_SENTINEL_MASTER_NAME=mymaster
# REDIS_SENTINEL_NODES=sentinel1:26379,sentinel2:26379,sentinel3:26379
